<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    tools:context="innopolis.habrareader.views.NewsPageActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageNews"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/habralogo"
            android:layout_width="300dp"
            android:layout_height="300dp" />

        <TextView
            android:id="@+id/textViewNewsTitle"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageNews" />

        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewNewsTitle" />

        <View
            android:layout_width="fill_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/textViewDescription"
            android:background="@android:color/black"
            android:layout_height="2dp"/>

        <TextView
            android:textStyle="bold"
            android:text="@string/publication_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewPublicationDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewDescription"
            android:text="Publication Date" />

        <TextView
            android:textStyle="bold"
            android:text="@string/author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewCreatorName"
            android:layout_below="@id/textViewPublicationDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="davlatbek" />

        <TextView
            android:textStyle="bold"
            android:text="@string/link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewLink"
            android:autoLink="web"
            android:layout_below="@id/textViewCreatorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textStyle="bold"
            android:text="@string/categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewCategories"
            android:layout_below="@id/textViewLink"
            android:text="@string/categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>